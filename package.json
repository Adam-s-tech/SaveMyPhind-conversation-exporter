{
  "scripts": {
    "licenses": "nlf -d > licenses.md && node manage/updateLicenses.js",
    "build": "node manage/prebuild.js && esbuild src/background.js --bundle --minify --outdir=dist && esbuild src/main.js --bundle --minify --outdir=dist && node manage/postbuild.js",
    "chrome": "convert-manifest-format --chrome && npm run build",
    "firefox": "convert-manifest-format --firefox && npm run build"
  },
  "devDependencies": {
    "convert-manifest-format": "^0.4.0",
    "esbuild": "^0.18.11"
  },
  "dependencies": {
    "dompurify": "^3.0.4",
    "fs-extra": "^11.1.1",
    "turndown": "^7.1.2"
  }
}
