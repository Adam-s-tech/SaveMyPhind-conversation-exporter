{
  "manifest_version": 3,
  "name": "Save my Phind",
  "version": "0.9",
  "description": "Export your Phind.com threads into markdown files!",
  "icons": {
    "128": "img/logo_128.png"
  },
  "permissions": [
    "scripting", "activeTab"
  ],
  "host_permissions": [
    "http://*.phind.com/*", "https://*.phind.com/*"
  ],
  "action": {
    "default_icon": "img/logo.png",
    "default_popup": ""
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:* http://127.0.0.1:* ; object-src 'self'"
  }
}
