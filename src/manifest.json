{
  "manifest_version": 3,
  "name": "Save my Phind - AI Conversation Exporter",
  "version": "1.0.1",
  "description": "ðŸš€ Export your Phind.com search threads into markdown files!\n",
  "icons": {
    "128": "img/logo_128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*.phind.com/*",
    "https://*.phind.com/*"
  ],
  "action": {
    "default_icon": "img/logo.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "savemyphind@hugocollin.com",
      "strict_min_version": "109.0"
    }
  }
}